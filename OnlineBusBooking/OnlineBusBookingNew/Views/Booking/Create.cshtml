@model IEnumerable<OnlineBusBookingNew.EF.Seat>


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<div class="container">
    <div class="col-md-12">
        <div class="col-md-4">
            <img src="~/Content/images/bus_item_bus004.png" />
            <br />
            
            <a href="~/Booking/Index" class="btn btn-success">Back to Routing</a>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-6">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="form-horizontal">
                    <h2>BOOKING SEAT</h2>
                    <h4>Select your Seat</h4>
                    <hr />

                    <input type="hidden" name="RoutingId" id="RoutingId" value="@ViewBag.RoutingId" />
                    <input type="hidden" name="BusId" id="BusId" value="@ViewBag.BusId" />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group col-md-12">
                        <div class="col-md-10">
                            <label>Bus Name:</label>
                            <input type="text" name="BusName" value="@ViewBag.BusName" readonly />
                            @*@Html.DropDownList("BusID", null, htmlAttributes: new { @class = "form-control" })*@

                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <div class="col-md-10">
                            <label>Seat number:</label>
                            @*@Html.DropDownList("ListSeat", null, htmlAttributes: new { @class = "form-control" })*@

                            <select name="SeatNumber" class="form-control">
                                @foreach (var seat in ViewBag.ListSeat)
                                {
                                    <option value="@seat.SeatNumber">@seat.SeatNumber</option>
                                }
                            </select>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="BOOKING" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
    
</div>


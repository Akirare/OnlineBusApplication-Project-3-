@model IEnumerable<OnlineBusBookingNew.EF.Routing>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Booking Routing</h2>

<p>
    We have Routings
</p>

<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bus.BusName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartPlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndPlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Bus.BusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartPlace)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndPlace)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                @*<td>
                    @Html.ActionLink("Booking", "Create", new { id = item.RoutingID }) |

                    @Html.ActionLink("Details", "Details", new { id=item.RoutingID }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.RoutingID })
                </td>*@
            </tr>
        }
    </tbody>

</table>

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-2">
            <h3 class="my-4">BUS Name</h3>
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <a class="list-group-item">@Html.DisplayFor(modelItem => item.Bus.BusName)</a>
                }


            </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-10">
            @foreach (var item in Model)
            {
                <!-- card 1-->
                <div class="col-lg-3">
                    <div class="card mt-2">
                        @{var imageItem = "bus_item_" + item.BusID + ".png";}
                        <img class="card-img-top img-fluid" src="~/Content/images/@imageItem" alt="">
                        <div class="card-body">
                            <h3 class="card-title">  </h3>
                            <h4>$ @item.Price</h4>
                            
                            <div class="card-header">
                                @item.StartPlace
                            </div> 
                            &nbsp;&nbsp; TO <br />
                            <div class="card-body">
                                <p> @item.EndPlace</p>
                            </div>
                            
                            <div class="card-body">
                                @{
                                    DateTime startDate = (DateTime)item.StartDate;
                                    string start = startDate.ToString("dd/MM/yyyy");
                                }
                                <p>Start: @start</p>
                            </div>
                            <hr>
                            <a href="/Booking/Create/@item.RoutingID" class="btn btn-success">BOOKING</a>
                        </div>
                    </div>
                </div>

                            }
        </div>

    </div>  <!-- /.row-->
</div>
<!-- /.container -->
